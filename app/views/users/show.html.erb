<%= title "Showing User: #{@user.name}" %>
<%= render 'users/links' %>
<%= markdown "###{yield(:title)}" %>

<table>
  <tr>
    <th class="left">Name</th>
    <th class="left">Email <em>(Click to Edit)</em></th>
  </tr>
  <tr>
    <td><%= @user.name %></td>
    <td><%= link_to @user.email, edit_user_path(@user) %></td>
  </tr>
</table>
