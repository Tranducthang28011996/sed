<% #SPEC: 1.0: Login Screen %>
<%= title "Log In" %>
<div id="wrapper" class="round">
<%= markdown "##DSC Education Management System" %>
<%= markdown "###Please Login" %>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email,  params[:email], :class => "input", :size => "30" %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password, nil, :class => "input", :size => "30"  %>
    </div>
    <div class="actions">
      <%= submit_tag "Sign In" %>
    </div>
  <% end %>
</div>
