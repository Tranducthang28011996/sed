<%= title "Forgot Password?" %>
<%= markdown "###{yield(:title)}" %>
<%= form_tag password_resets_path, :class => "nice_round", :method => :post do %>
  <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], :size => "40" %><br />
      <em>(You will receive an email containing instructions on how to reset your password.)</em><br />
  </div>
  <div class="actions">
    <%= submit_tag "Reset Password" %>
  </div>
<% end %>
