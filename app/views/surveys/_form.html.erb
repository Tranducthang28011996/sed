<%= form_for @survey, :html => { :class => "nice_round" }  do |f| %>
  <%= render "shared/error_messages", :target => @survey %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
  </div>
  <div class="field">
    <%= f.label :publish %><br />
    Yes <%= f.radio_button :published, true %> 
    No <%= f.radio_button :published, false %><br />
  </div>
  <div class="field">
    <%= f.text_field :available_at, :class => "foo" %>
  </div>
  <div class="field">
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', :f => builder %>
  <% end %>
  </div>
  <div class="actions">
    <p>
    <% #SPEC: 2.2.10 : Adding a new questions to a Survey(form) %>
      <%= link_to_add_fields "Add Question", f, :questions %>
    </p>
    <%= f.submit "Submit" %>
  </div>
<% end %>
